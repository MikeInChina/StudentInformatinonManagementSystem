<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wdc.studentinformationmanagementsystem.StatisticsController">
   <Label text="统计信息">
      <font>
         <Font size="18.0" />
      </font>
      <VBox.margin>
         <Insets bottom="10.0" top="10.0" />
      </VBox.margin>
   </Label>
   <TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="509.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE">
      <Tab text="性别">
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="800.0">
            <PieChart fx:id="genderChart" title="性别占比统计" />
            <Label fx:id="infoLabel">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
         </VBox>
      </Tab>
      <Tab text="班级">
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
            <BarChart fx:id="classChart" title="各班人数统计">
               <xAxis>
                  <CategoryAxis fx:id="classChartCategory" label="班级" />
               </xAxis>
               <yAxis>
                  <NumberAxis fx:id="classChartNumber" label="人数" side="LEFT" />
               </yAxis>
            </BarChart>
         </VBox>
      </Tab>
   </TabPane>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <Button mnemonicParsing="false" onAction="#quit" text="确定" />
   </HBox>
</VBox>
